# AutoNVIS Environment Configuration
# Copy this file to .env and customize for your environment

# Application Environment
ENVIRONMENT=production

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=autonvis
RABBITMQ_PASSWORD=change_this_secure_password

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=autonvis
POSTGRES_USER=autonvis
POSTGRES_PASSWORD=change_this_secure_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080

# Grafana Configuration
GRAFANA_PASSWORD=change_this_admin_password

# NVIS Protocol Adapter Ports
TCP_ADAPTER_PORT=8001
HTTP_ADAPTER_PORT=8002
MQTT_ADAPTER_ENABLED=false
MQTT_BROKER_HOST=mqtt.example.com
MQTT_BROKER_PORT=1883

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8003

# Performance Tuning
MAX_WORKERS=4
FILTER_CYCLE_INTERVAL=900  # 15 minutes in seconds
