{
  "dashboard": {
    "title": "NVIS System Monitoring",
    "tags": ["nvis", "ionosphere", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Ingestion Latency",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(nvis_ingestion_latency_seconds_sum[5m]) / rate(nvis_ingestion_latency_seconds_count[5m])",
            "legendFormat": "Average Latency",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(nvis_ingestion_latency_seconds_bucket[5m]))",
            "legendFormat": "P99 Latency",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Observation Throughput",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(nvis_observations_total[5m])",
            "legendFormat": "Observations/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Throughput"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Quality Tier Distribution",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "nvis_observations_by_tier",
            "legendFormat": "{{tier}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Information Gain",
        "type": "graph",
        "gridPos": {"x": 8, "y": 8, "w": 16, "h": 8},
        "targets": [
          {
            "expr": "nvis_information_gain_total",
            "legendFormat": "Total Information Gain",
            "refId": "A"
          },
          {
            "expr": "rate(nvis_information_gain_total[1h])",
            "legendFormat": "Information Gain Rate",
            "refId": "B"
          }
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"autonvis-.*\"} / 1024 / 1024",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "mbytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"autonvis-.*\"}[5m]) * 100",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Filter Cycle Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "nvis_filter_cycle_duration_seconds",
            "legendFormat": "Cycle Duration",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [60], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "Filter Cycle Time Alert",
          "message": "Filter cycle time exceeded 60 seconds"
        }
      },
      {
        "id": 8,
        "title": "Top Contributors (Information Gain)",
        "type": "bargauge",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, nvis_sounder_information_gain)",
            "legendFormat": "{{sounder_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 9,
        "title": "RabbitMQ Queue Depth",
        "type": "graph",
        "gridPos": {"x": 0, "y": 32, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rabbitmq_queue_messages{queue=\"obs.nvis_sounder\"}",
            "legendFormat": "Queue Depth",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Messages"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 32, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(nvis_errors_total[5m])",
            "legendFormat": "Errors/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Error Rate"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.01], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "High Error Rate Alert",
          "message": "Error rate exceeded 0.01 errors/sec"
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 1
  }
}
